<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="distribution_channel_tree" model="ir.ui.view">
            <field name="name">distribution_channel_tree</field>
            <field name="model">distribution.channel.tag</field>
            <field name="arch" type="xml">
                <tree string="Vertriebskanäle">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="distribution_channel_form" model="ir.ui.view">
            <field name="name">distribution_channel_form</field>
            <field name="model">distribution.channel.tag</field>
            <field name="arch" type="xml">
                <form string="Vertriebskanal">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="distribution_channel_action" model="ir.actions.act_window">
            <field name="name">Vertriebskanäle</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">distribution.channel.tag</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="distribution_channel_action_menu" name="Vertriebskanäle" parent="sale.menu_sale_config" action="distribution_channel_action" sequence="30" groups="syncspider.group_distribution_channels"/>

    </data>
</odoo>