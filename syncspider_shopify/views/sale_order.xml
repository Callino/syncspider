<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">view_order_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='other_information']/group" position="inside">
                    <group string="Syncspider">
                        <field name="auto_downpayment"/>
                        <field name="gateway"/>
                        <field name="amount_received"/>
                        <field name="payment_status"/>
                        <field name="shopify_delivery_method"/>
                        <field name="shopify_delivery_amount"/>
                    </group>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
